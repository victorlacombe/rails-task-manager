<h1>Edit the tasks (<%= @task.title %>) using the form below: </h1>

<%= form_for(@task) do |f| %>
<div class="from-group">
  <%= f.label "Enter your task" %>:
  <%= f.text_field :title, class: "form-control" %><br />
</div>
<div class="from-group">
  <%= f.label "Add some details" %>:
  <%= f.text_field :details, class: "form-control" %><br />
</div>
<div class="from-group">
  <%= f.label "Completed the task ? Check the box" %>
  <%= f.check_box :completed, class: "form-control" %><br />
</div>
  <%= f.submit class: 'btn btn-primary'%>
<% end %>
