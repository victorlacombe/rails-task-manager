<h1>Welcome to your task manager ! </h1>
<div class="tasks-container">
  <div class="tasks-content">
    <% @tasks.each do |task| %>
      <p>
        <% if task.completed %>
          <i class="far fa-check-square"> </i>
        <% else %>
          <i class="far fa-square"> </i>
        <% end %>
        <%= link_to task.title, task_path(task) %>
        <%= link_to "DELETE", delete_path(task), method: :delete, class: "btn btn-info" %>
      </p>
    <% end %>
      <%= link_to "Create a new task", new_path, class: "btn btn-primary" %>
  </end>
</div>
